<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="tvShow"
            type="com.example.tvshowsapplication.models.TvShow" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Black"
        app:layout_goneMarginBottom="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_8sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/viewBackground"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignBottom="@+id/layout_main"
                android:layout_alignParentTop="true"
                android:background="@drawable/background_tv_show" />

            <LinearLayout
                android:id="@+id/layout_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:imageURL="@{tvShow.image_thumbnail_path}"
                        android:id="@+id/imageTvShow"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:scaleType="centerCrop"
                        app:civ_border_width="@dimen/_4sdp" />


                    <View
                        android:id="@+id/view_supporter"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_10sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView

                        android:id="@+id/tvNameShows"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/_8sdp"
                        android:text="@{tvShow.name}"
                        android:textColor="@color/White"
                        android:textSize="@dimen/_13sdp" />

                    <TextView

                        android:id="@+id/tvNetWorkShows"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/_8sdp"
                        android:text='@{tvShow.network + "(" + tvShow.country + ")"}'
                        android:textColor="@color/White"
                        android:textSize="@dimen/_13sdp" />

                    <TextView

                        android:id="@+id/tvStartedShows"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/_8sdp"
                        android:text='@{"Started on: " +tvShow.start_date }'
                        android:textColor="@color/White"
                        android:textSize="@dimen/_13sdp" />

                    <TextView

                        android:id="@+id/tvStatusShows"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/_8sdp"
                        android:text="@{tvShow.status}"
                        android:textColor="@color/White"
                        android:textSize="@dimen/_13sdp" />


                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</layout>